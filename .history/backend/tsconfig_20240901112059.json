{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    "outDir": "./dist",               // Répertoire de sortie des fichiers JavaScript compilés
    "rootDir": "./src",               // Répertoire racine des fichiers TypeScript
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": false,                  // Permet l'émission des fichiers compilés
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strictPropertyInitialization": false
  },
  "files": ["./src/types.d.ts"],         // Fichiers de déclaration de type
  "include": ["src/**/*.ts"],            // Inclut tous les fichiers .ts dans src
  "exclude": ["node_modules"],           // Exclut les fichiers dans node_modules
  "typeRoots": ["./node_modules/@types"] // Répertoire des types TypeScript
}
